{
  "manifest_version": 2,
  "name": "uProbe",
  "description": "Blocking diagnosis",
  "version": "0.0.1",
  "app": {
    "background": {
      "scripts": [
        "background.js", "uprobe.js"
      ]
    }
  },
  "sockets": {
    "udp": {
      "send": ":*",
      "bind": ":*"
    } 
  },
  "permissions": [
    "storage",
    { "socket": ["tcp-connect", "tcp-listen", "udp-bind", "udp-send-to"] }
  ]
}
